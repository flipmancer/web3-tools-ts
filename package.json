{
	"name": "web3_tools_ts",
	"version": "0.1.0",
	"description": "Simple web3 tool written in typescript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"outDir": "./dist",
	"declaration": true,
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"test": "jest",
		"lint": "eslint src/**/*.ts",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/flipmancer/web3_tools_ts.git"
	},
	"keywords": [
		"web3",
		"ethereum",
		"bitcoin",
		"solana"
	],
	"author": "NoobishDev",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/flipmancer/web3_tools_ts/issues"
	},
	"homepage": "https://github.com/flipmancer/web3_tools_ts#readme",
	"dependencies": {
		"ethers": "^5.8.0",
		"axios": "^1.12.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^20.19.24",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"prettier": "^3.2.4",
		"ts-jest": "^29.1.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"dotenv": "^17.2.3"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
